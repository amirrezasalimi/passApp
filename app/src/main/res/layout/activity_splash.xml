<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".activity.Splash">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentLeft="true"
                   android:src="@drawable/splash"
                   android:scaleType="centerCrop" android:cropToPadding="false" android:adjustViewBounds="false"/>

        <ir.amirsalimi.passapp.view.SplashWave
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent" android:layout_height="match_parent">

        </ir.amirsalimi.passapp.view.SplashWave>
        <ImageView
                android:id="@+id/shield"
                android:layout_width="150dp"
                android:layout_height="165dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_shield"
                android:alpha="0.9"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="save your passwords!"
                  android:layout_below="@id/shield"

                  android:layout_centerHorizontal="true"
                  android:background="@drawable/splash_center_title"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:layout_margin="6dp"

        />

    </RelativeLayout>
</RelativeLayout>