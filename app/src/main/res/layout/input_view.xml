<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout android:id="@+id/base" android:background="@drawable/input_default"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

        <EditText
                android:id="@+id/input"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#414141"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:layout_centerVertical="true"
        />
        <LinearLayout android:layout_centerVertical="true"
                      android:id="@+id/leftItems"
                      android:layout_gravity="center_vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_alignParentLeft="true"
                      android:orientation="horizontal"
        >
        </LinearLayout>
        <LinearLayout android:layout_centerVertical="true"
                      android:orientation="horizontal"
                      android:id="@+id/rightItems"
                      android:layout_gravity="center_vertical"

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true">

        </LinearLayout>

    </RelativeLayout>
    <TextView
            android:visibility="gone"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/base"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:textSize="11dp"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    <TextView
            android:id="@+id/title"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="29dp"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginRight="10dp" android:layout_alignParentEnd="true"/>

</RelativeLayout>