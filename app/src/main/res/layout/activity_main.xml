<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Main">
    <LinearLayout android:orientation="vertical" android:weightSum="2" android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <RelativeLayout
                android:layout_weight="1.6"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_info"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_settings"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>

            <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="155dp"
                    android:layout_height="250dp">
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="خوش آمدید"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_alignParentStart="true"
                        android:textColor="#49C9A2"
                        android:text="امیررضا"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="3dp"
                    android:background="@drawable/search_bg"
            >

                <EditText
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textColor="#414141"
                        android:textDirection="rtl"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:hint="جستجو..."
                        android:textColorHint="#272727"
                />
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="6dp"

                        android:src="@drawable/ic_search"
                        android:layout_alignParentLeft="true"
                />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_marginTop="20dp" android:layout_weight="1" android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            >
                <RelativeLayout android:layout_width="190dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true">
                    <ImageView android:layout_width="28dp"
                               android:id="@+id/lockIcon"
                               android:layout_height="28dp"

                               android:layout_centerVertical="true"
                               android:layout_alignParentRight="true"
                               android:src="@drawable/ic_lock"
                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="رمز های ذخیره شده"
                              android:id="@+id/savedTitle"
                              android:layout_toLeftOf="@id/lockIcon"
                              android:layout_centerVertical="true"
                              android:textColor="#686868"
                              android:layout_alignParentLeft="true"
                              android:textSize="16dp"
                    />
                    <TextView
                            android:id="@+id/numberSaved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:background="@drawable/number_saved_bg"
                            android:text="+12"
                    />


                </RelativeLayout>
                <RelativeLayout android:layout_width="150dp" android:layout_height="wrap_content">
                    <RelativeLayout android:background="@drawable/new_btn_bg"
                                    android:layout_width="100dp"
                                    android:layout_centerVertical="true"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_height="38dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:layout_centerInParent="true"
                                  android:text="افزودن"
                                  android:textColor="@color/white"
                                  android:textSize="18dp"
                        />


                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/passwordsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>